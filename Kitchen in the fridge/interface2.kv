WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:



<MainWindow>:
    name: "Home"
    canvas:
        Color:
            rgb: (.75, .85, .92, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        Label:
            text: "KITCHEN IN THE FRIDGE"
            id: kitf_title
            font_name: "Royalacid.ttf"
            font_size: 30
            color: .00, .00, .00, 1
            size_hint: 1, .1
            pos_hint: {"top": 1, "right": 1}

        ScrollView:
            size_hint: 1, 1
            pos_hint: {"top": .80, "right": 1}
            GridLayout:
                cols: 3
                size_hint: 1, .10
                pos_hint: {"top": .90, "right": 1}

                CheckBox:
                    color: .00, .00, .00, 1
                    on_active: root.checkbox_click(self, self.active)
                Label:
                    text: "Tomatoes"
                    font_size: 32
                    font_name: "Royalacid.ttf"
                    color: .00, .00, .00, 1
                Image:
                    source: "trash.png"

                CheckBox:
                    color: .00, .00, .00, 1
                    on_active: root.checkbox_click(self, self.active)
                Label:
                    text: "Lettuce"
                    font_size: 32
                    font_name: "Royalacid.ttf"
                    color: .00, .00, .00, 1
                Image:
                    source: "trash.png"

                CheckBox:
                    color: .00, .00, .00, 1
                    on_active: root.checkbox_click(self, self.active)
                Label:
                    text: "Onion"
                    font_size: 32
                    font_name: "Royalacid.ttf"
                    color: .00, .00, .00, 1
                Image:
                    source: "trash.png"



        GridLayout:
            rows: 1
            cols: 2
            size_hint: 1, .15
            pos_hint: {"top": .15, "right": 1}

            Button:
                text: "Add ingredient"
                font_size: 24
                font_name: "Royalacid.ttf"
                background_color: "#0B132B"
                on_release:
                    app.root.current = "Home"
                    root.manager.transition.direction = "right"
            Button:
                text: "Search recipes"
                font_size: 24
                font_name: "Royalacid.ttf"
                background_color: "#0B132B"
                on_release:
                    app.root.current = "Home"
                    root.manager.transition.direction = "right"

<SecondWindow>:
    name: "Add ingredient"

    GridLayout:
        cols:1

        Label:
            text: "Ingredient name: "

        TextInput:
            id: ingredient_name
            multiline: False

        GridLayout:
            cols:2




<ThirdWindow>:
    name: "Search recipes"

    GridLayout:
        cols:1

        Button:
            text: "Save"
            background_color: "red"
            on_release:
                app.root.current = "Home"
                root.manager.transition.direction = "right"